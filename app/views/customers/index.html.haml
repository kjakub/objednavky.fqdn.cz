%h1
  List of of Customers
%ul{"data-role" => "listview", "data-inset" => "true"}
  - @customers.each do |customer|
    %li
      ="Costomer #"
      = customer.id
      %br
      = customer.email
      %div{"data-role" => "controlgroup", "data-type" => "horizontal"}
        = link_to "destroy", customer_path(customer), :method => :delete, :data =>{:role => "button"}
        = link_to "edit", edit_customer_path(customer), :data =>{:role => "button"}